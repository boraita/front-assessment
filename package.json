{
  "name": "front-assesment",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "concurrently \"npm run start:api\" \"ng serve\"",
    "start:api": "cd api && npm start",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:e2e:open": "concurrently \"npm start\" \"cd e2e && npm run cypress\"",
    "test:e2e:local": "start-server-and-test start http://localhost:4200 \"cd e2e && npm run cy:local\"",
    "test:e2e:ci": "start-server-and-test start http://localhost:4200 test:e2e:ci"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.2.2",
    "@angular/common": "~13.2.2",
    "@angular/compiler": "~13.2.2",
    "@angular/core": "~13.2.2",
    "@angular/forms": "~13.2.2",
    "@angular/platform-browser": "~13.2.2",
    "@angular/platform-browser-dynamic": "~13.2.2",
    "@angular/router": "~13.2.2",
    "concurrently": "^7.0.0",
    "rxjs": "~7.4.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.2.3",
    "@angular/cli": "~13.2.3",
    "@angular/compiler-cli": "~13.2.2",
    "@types/jest": "^27.4.0",
    "@types/node": "^12.11.1",
    "jest": "^27.4.7",
    "jest-preset-angular": "^11.1.0",
    "start-server-and-test": "^1.14.0",
    "typescript": "~4.5.2"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/setupJest.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/",
      "<rootDir>/e2e/"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/tsconfig.spec.json",
        "stringifyContentPathRegex": "\\.html$"
      }
    }
  }
}
